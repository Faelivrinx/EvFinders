<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"

    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/mountain_state_0"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/activity_start_test_backView"
        android:visibility="visible"
        android:background="#2D000000"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back_animation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_arrow_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_start_test_status"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:text="Logowanie dostępne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center|end"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="8dp"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_start_start"
        android:layout_width="0dp"
        android:layout_height="291dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_start_start_btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/login_button"
                android:fontFamily="@font/timesnewroman"
                android:paddingBottom="48dp"
                android:paddingTop="48dp"
                android:text="Logowanie"
                android:textAllCaps="false"
                android:textColor="#ffdbc5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/activity_test_register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_start_start_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/register_button"
                android:fontFamily="@font/timesnewroman"
                android:paddingBottom="48dp"
                android:paddingTop="48dp"
                android:text="Rejestracja"
                android:textAllCaps="false"
                android:textColor="#2e112d"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_start_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_start_login_etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Nazwa użytkownika"
                android:inputType="text"
                android:textColorHint="#2e112d" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_start_login_etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Haslo"
                android:inputType="textPassword"
                android:textColorHint="#2e112d" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_start_login_btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/register_button"
                android:paddingBottom="32dp"
                android:paddingTop="32dp"
                android:text="Zaloguj"
                android:textColor="#2e112d"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_start_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_start_register_etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Nazwa użytkownika"
                android:inputType="text"
                android:textColorHint="#2e112d" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_start_register_etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="Haslo"
                android:inputType="textPassword"
                android:textColorHint="#2e112d" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_start_register_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#2e112d" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/activity_start_register_btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/register_button"
                android:paddingBottom="32dp"
                android:paddingTop="32dp"
                android:text="Zarejestruj"
                android:textColor="#2e112d"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>