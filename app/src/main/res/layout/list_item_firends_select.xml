<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_friends_select_mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/list_item_friends_select_cbIsSelected"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_friends_select_avatar"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:adjustViewBounds="false"
        android:src="@color/colorPrimary" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <TextView
            android:id="@+id/list_item_friends_select_name"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:text="Dominik Jurasz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_friends_select_username"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="faelivrin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>