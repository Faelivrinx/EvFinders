<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dominik.evfinders">

    <application
        android:name=".application.EvApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBVU5di9i8eyt6WZ2DfXGp3H3lZumiADB8" />

        <activity
            android:name=".mvp.home.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.start.StartActivity" />
        <activity android:name=".mvp.login.LoginActivity" />
        <activity android:name=".mvp.register.RegisterActivity" />
        <activity android:name=".mvp.friends.FriendsListActivity" android:theme="@style/AppTheme.NoActionBar"/>

        <service android:name=".application.FirebaseInstanceIdService">
            <intent-filter >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".application.FcmService" />
        <service android:name=".application.FirebaseMessagingService" />
    </application>
    

</manifest>